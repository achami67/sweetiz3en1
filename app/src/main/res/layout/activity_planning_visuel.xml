<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_visuel_planning"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <Spinner
            android:id="@+id/spinner_jour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_commande_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/commande_exemple_1"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/text_commande_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/commande_exemple_2" />

        <Button
            android:id="@+id/btn_ajouter_client"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ajouter_client"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btn_ajouter_ponctuelle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ajouter_ponctuelle" />

        <Button
            android:id="@+id/btn_ajouter_speciale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_ajouter_speciale" />

        <Button
            android:id="@+id/btn_modifier_commande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_modifier_commande" />

        <Button
            android:id="@+id/btn_valider_planning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_valider_planning"
            android:layout_marginTop="20dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
