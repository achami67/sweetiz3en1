<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutCommandeClient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#DDDDDD"
    android:padding="16dp"
    android:layout_margin="8dp">

    <!-- Nom du client -->
    <EditText
        android:id="@+id/editNomClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom du client"
        android:inputType="textPersonName"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <!-- Sous-commandes de ce client -->
    <LinearLayout
        android:id="@+id/layoutGouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Boutons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <!-- Ajouter un type -->
        <Button
            android:id="@+id/buttonAjouterType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ajouter un type"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white" />

        <!-- Supprimer le client -->
        <Button
            android:id="@+id/buttonSupprimerClient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Supprimer"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
