<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/rootLayout"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Production : Stock Journalier"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ✅ Date -->
        <TextView
            android:text="Date :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="jj / mm / aaaa"
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_height="1dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp" />

        <!-- ✅ Stock total -->
        <TextView
            android:text="Tiramisus en stock :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextStockTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <View
            android:layout_height="1dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp" />

        <!-- ✅ Saisie par goût -->
        <TextView
            android:text="— Saisie par goût —"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- ✅ Pistache -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Pistache : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/editTextPistache"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
            <TextView
                android:text=" tiramisus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_height="1dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp" />

        <!-- ✅ Bueno -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Bueno : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/editTextBueno"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
            <TextView
                android:text=" tiramisus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_height="1dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp" />

        <!-- ✅ Goûts dynamiques -->
        <LinearLayout
            android:id="@+id/layoutGoutsDynamiques"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- ✅ Ajouter un goût -->
        <Button
            android:id="@+id/buttonAjouterGout"
            android:text="Ajouter un goût"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- ✅ Valider / Modifier -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonValider"
                android:text="Valider"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonModifier"
                android:text="Modifier"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
